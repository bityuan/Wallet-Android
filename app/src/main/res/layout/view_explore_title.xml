<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@color/color_bg">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_explore_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/main_explore"
        android:textColor="@color/my_item_text"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintBottom_toTopOf="@id/view_explore_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <View
        android:id="@+id/view_explore_title"
        android:layout_width="20dp"
        android:layout_height="4dp"
        app:bl_corners_radius="2dp"
        app:bl_solid_color="@color/color_7190FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/tv_explore_title"
        app:layout_constraintRight_toRightOf="@id/tv_explore_title"
        app:layout_constraintTop_toBottomOf="@id/tv_explore_title" />

</androidx.constraintlayout.widget.ConstraintLayout>