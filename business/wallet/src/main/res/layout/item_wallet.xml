<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="12dp"
    android:layout_marginRight="20dp">

    <RelativeLayout
        android:id="@+id/rl_wallet"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:background="@mipmap/my_wallet_bg_black">

        <TextView
            android:id="@+id/tv_wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="@dimen/dp_25"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="-"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_wallet_type"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_toEndOf="@+id/tv_wallet_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text="-"
            android:textColor="@color/color_80ffffff"
            android:textSize="14sp"
          />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="@dimen/dp_59"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/color_80ffffff"
            android:textSize="14sp"
            tools:text="-" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_wallet_type"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/my_wallet_coins" />


    <TextView
        android:id="@+id/tv_current_wallet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@mipmap/my_wallet_current"
        android:gravity="center"
        android:text="@string/choose_c_str"
        android:textColor="#ffffff"
        android:textSize="12sp" />



</RelativeLayout>
