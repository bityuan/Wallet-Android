<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_rectangle"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="17dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="20dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:gravity="center"
                android:text="BTC"
                android:textColor="@android:color/white"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:background="@drawable/bg_address_flag"
                android:textSize="15sp"/>

            <View
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="10dp"/>

            <ImageView
                android:id="@+id/iv_copy"
                android:paddingRight="14dp"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@mipmap/icon_copy_default" />




        </LinearLayout>

        <TextView
            android:id="@+id/tv_address"
            android:textColorHint="@color/color_8E92A3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_333649"
            android:layout_marginTop="13dp"
            android:paddingRight="14dp"
            android:paddingLeft="14dp"
            android:layout_weight="1"
            android:textSize="14sp"
            android:text=""
            android:layout_marginBottom="20dp"
            android:background="@null" />


    </LinearLayout>
</LinearLayout>
